# PayFlow Gateway Environment Configuration Template
# Copy this file to .env and set your actual values
# NEVER commit the real .env file to version control

# Database Configuration
POSTGRES_DB=payflowdb
POSTGRES_USER=payflow_user
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# PgAdmin Configuration
PGADMIN_EMAIL=admin@payflow.local
PGADMIN_PASSWORD=your_secure_pgadmin_password_here
PGADMIN_PORT=8081

# Application Security Configuration
JWT_SECRET=your_very_long_jwt_secret_key_at_least_512_bits_here
JWT_EXPIRATION=86400000

# API Configuration
DB_USERNAME=payflow_user
DB_PASSWORD=your_secure_database_password_here